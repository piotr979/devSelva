<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome Admin!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
		<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/11.3.1/styles/default.min.css">
		<script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/11.3.1/highlight.min.js"></script>
		<meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1"/>

		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
			<script src="https://cdn.tiny.cloud/1/l8uwbak1mjxo895bp92fo6cr1d2uqmjo4lxqwp0dt9cwjjku/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
		{% endblock %}
	</head>
	
	<body>
		<div class="container">
			<div class=" " id="nav-parent">
				<header class="wrapper header--dark justify-end backgrounds-styling"></header>
			</div>
		</div>

		<input type="checkbox" class="navigator-checkbox" id="navigator-check">

		<label for="navigator-check">
			<image class="open-emph" src="/../images/nav/navigator/plus_square.svg" id="open-sidebar" alt="open sidebar">
			<image src="/../images/nav/navigator/minus_square.svg" id="close-sidebar" alt="close sidebar">
		</label>

		<div id="navigator-sidebar" class="navigator-sidebar">
			<div class="sidebar-wrapper">
				<div class="logo">
					<img class="logo-icon logo-icon--shining" src="/../images/nav/ring-ship.svg" alt="ship with ring icon">
						<p class="logo-text logo-text-dark">DevSelva</p>
				</div>
				<aside class="admin-aside">
					<a class="mt-1 {% if app.request.attributes.get('_route') == 'articles' %} link-active {% endif %}" href="{{ path('articles') }}">Articles</a>
					<a class="mt-1 {% if app.request.attributes.get('_route') == 'categories' %} link-active {% endif %}" href="{{ path('categories') }}">Categories</a>
					<a class="mt-3 link-standout" href="{{ path('main')}}">Switch to front</a>
					<a class="mt-1 link-standout" href="{{ path('logout') }}">Log out</a>
				</aside>
			</div>
		</div>
		<div class="navigator-text--container">
			<div class="navigator-sidebar--dummy"></div>
			<main class="admin-main"> {% block body %}{% endblock %}
				</main>
			</div>
		</body>
	</html>
</div>
